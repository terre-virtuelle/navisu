<persistence  version="2.0" 
              xmlns="http://java.sun.com/xml/ns/persistence"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
                                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="navisuPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>bzh.terrevirtuelle.navisu.domain.ship.model.Ship</class> 
        <class>bzh.terrevirtuelle.navisu.domain.ship.model.LocalDateTimePersistenceConverter</class>     
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
            <property name="javax.persistence.jdbc.url"    value="jdbc:derby:data/databases/NavisuDB;create=true" />
            <property name="javax.persistence.jdbc.user" value="navisu" />
            <property name="javax.persistence.jdbc.password" value="!!navisu??" />
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
        </properties>
    </persistence-unit>
</persistence>